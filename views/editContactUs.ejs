<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Contact Us</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>

<body>
    <div class="card" style="padding: 3rem;">
        <div class="card-body">
            <h6 class="card-title text-center" style=" padding-bottom: 2rem;">Edit Contact Us</h6>
            <form action="/editContactUs/<%=values._id%>" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" name="contact_name" value="<%= values.contact_name %>"
                            placeholder="Enter Name">
                        <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                            <div style="color: red;">
                                <%= error1 %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" name="contact_email"
                            value="<%= values.contact_email %>" placeholder="Enter Email">
                        <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                            <div style="color: red;">
                                <%= error2 %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact Number</label>
                        <input type="number" class="form-control" name="contact_no" value="<%= values.contact_no %>"
                            placeholder="Enter Contact Number">
                        <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                            <div style="color: red;">
                                <%= error3 %>
                            </div>
                            <% } %>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Message</label>
                        <textarea class="form-control" maxlength="255" rows="4" cols="20"
                            style="height: 100%!important;" name="msg"><%= values.msg %></textarea>
                        <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                            <div style="color: red;">
                                <%= error4 %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Date</label>
                        <input type="date" class="form-control" name="date" value="<%= values.date %>"
                            placeholder="Enter Date">

                        <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                            <div style="color: red;">
                                <%= error5 %>
                            </div>
                            <% } %>
                    </div>
                </div>
                <input type="submit" class="btn btn-outline-success btn-sm" value="Edit">
                <a href="/contactUs"> <input class="btn btn-primary" style="margin: 0% 2%;" id="edit" type="button"
                        value="Cancel"></a>
            </form>
        </div>
</body>

</html>